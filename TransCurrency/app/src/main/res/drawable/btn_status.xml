<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="20dp" />

            <solid
                android:color="@android:color/transparent" />

            <stroke
                android:color="#6F7445"
                android:width="2dp" />

            <size
                android:width="165dp"
                android:height="40dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="20dp" />

            <solid
                android:color="@android:color/darker_gray" />

            <stroke
                android:color="#6F7445"
                android:width="2dp" />

            <size
                android:width="165dp"
                android:height="40dp" />

        </shape>
    </item>
</selector>